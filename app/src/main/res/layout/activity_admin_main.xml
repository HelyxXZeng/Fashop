<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminMainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHello"
            android:text="Welcome, Admin"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSuggestAD"
            android:text="What do you want to do? :"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvHello"
            app:layout_constraintStart_toStartOf="@id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSuggestAD"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvProduct"
                android:textStyle="bold"
                android:text="Products:"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonaddPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCategories"
                app:layout_constraintStart_toStartOf="@id/tvCategories"
                android:text="Add Products"
                android:padding="10sp"
                android:layout_margin="2sp"
                />
            <Button
                android:id="@+id/buttoneditPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCategories"
                app:layout_constraintStart_toStartOf="@id/tvCategories"
                android:text="Edit Products"
                android:padding="10sp"
                android:layout_margin="2sp"
                />
            <TextView
                android:id="@+id/tvCategory"
                android:textStyle="bold"
                android:text="Categories:"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonaddCa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCategories"
                app:layout_constraintStart_toStartOf="@id/tvCategories"
                android:text="Add Categories"
                android:padding="10sp"
                android:layout_margin="2sp"
                />
            <Button
                android:id="@+id/buttoneditCa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCategories"
                app:layout_constraintStart_toStartOf="@id/tvCategories"
                android:text="Edit Categories"
                android:padding="10sp"
                android:layout_margin="2sp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:src="@drawable/logo_orange"
            android:text="Log Out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>