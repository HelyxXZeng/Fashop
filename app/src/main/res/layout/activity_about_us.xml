<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutUsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:background="@color/orange"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:textColor="?attr/colorOnPrimary"
                android:text="About Us" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAboutUs"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_white"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fashop"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dare to change"
                        android:textSize="17sp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFirstHelpTitle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Fashop"
                    android:textSize="18sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Established 20/6/2023"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:id="@+id/tvFirstHelpContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is the first content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address "
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotline "
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email "
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Fashop, we understand that fashion is more than just clothing; it's a form of self-expression. That's why our team is constantly curating a wide range of fashion-forward apparel to suit every taste and occasion. Whether you're looking for casual everyday wear, elegant evening attire, or statement pieces that make heads turn, we've got you covered. "
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:clickable="true"
                    android:padding="10dp"
                    android:text="We value your satisfaction and aim to exceed your expectations with our friendly customer service and hassle-free shopping experience. Your feedback is essential to us, as it helps us continuously improve and provide you with even better service." />

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Fashop today and explore our collection of trendy clothing. We look forward to being a part of your fashion journey!" />
            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>