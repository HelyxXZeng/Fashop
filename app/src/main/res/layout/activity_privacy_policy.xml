<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PrivacyPolicyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:background="@color/orange"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:textColor="?attr/colorOnPrimary"
                android:text="Privacy Policy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPrivacyPolicy"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_white"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fashop"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dare to change"
                        android:textSize="17sp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFirstHelpTitle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Fashop, we prioritize the privacy and security of our customers' personal information. This Privacy Policy outlines how we collect, use, and protect your data when you visit or make a purchase from our online store."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information We Collect:"
                    android:textSize="17sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.Personal Information: When you make a purchase or create an account, we collect certain personal information such as your name, email address, shipping address, billing address, and phone number.
Payment Information: To process your payment, we securely collect and store your payment card details. Please note that we do not store your complete payment card information after the transaction is complete."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Device Information: We automatically collect certain information about your device, including your IP address, browser type, and operating system."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>





                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Order Fulfillment: We use your personal information to process and fulfill your orders, including shipping, delivery, and customer support."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Communication: We may use your email address or phone number to communicate with you about your orders, updates, promotions, and customer service inquiries."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Data Security:

We implement industry-standard security measures to protect your personal information against unauthorized access, disclosure, alteration, or destruction.
We use secure socket layer technology (SSL) to encrypt and protect your sensitive information during transmission."
                    android:textSize="15sp"
                    android:clickable="true"
                    android:backgroundTint="@android:color/transparent"/>



            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>